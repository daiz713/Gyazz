#!/usr/bin/env ruby
# -*- coding: utf-8 -*-
#
# 管理コマンド
#
# % gyazz list masui
#   masuiにページをリストする
#

$:.unshift File.expand_path '../lib', File.dirname(__FILE__)

require 'uri'
require 'lib'
require 'config'
require 'pair'
require 'readdata'
require 'writedata'

cmd = ARGV.shift
if cmd.nil?
  puts "% gyazz cmd {args}"
  exit
end

if cmd == 'list' then
  name = ARGV.shift
  exit unless name

  top = Gyazz.topdir(name)
  pair = Pair.new("#{top}/pair")
  titles = pair.keys
  pair.close

  puts titles
elsif cmd == 'replace' then
  name = ARGV.shift
  from = ARGV.shift
  to = ARGV.shift
  exit if !name || !from || !to
  puts from

  top = Gyazz.topdir(name)
  pair = Pair.new("#{top}/pair")
  titles = pair.keys
  pair.close

  titles.each { |title| 
    data = readdata(name,title)
    newdata = []
    newdata << name
    newdata << title
    data.gsub!(from,to)
    newdata += data.split(/\n/)
    
    __writedata(newdata,false)
    #puts "----- #{title} ------"
    #puts newdata
  }
end

