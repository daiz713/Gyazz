<html>
  <head>
    <meta content='text/html; charset=utf-8' http-equiv='Content-Type'>
    <meta name='robots' content='noindex,nofollow'>
    <title><%= @name %> / <%= @title %></title>
    <link href='<%= app_root %>/stylesheets/gyazz.css' rel='stylesheet' type='text/css; charset=utf-8'>
    <link rel="shortcut icon" href="<%= app_root %>/favicon.ico">
    <script language="JavaScript" src='<%= app_root %>/javascripts/jquery.js'></script>
    <script language="JavaScript" src='<%= app_root %>/javascripts/utf.js'></script>
    <script language="JavaScript" src='<%= app_root %>/javascripts/md5.js'></script>
    <script language="JavaScript" src='<%= app_root %>/javascripts/edit.js'></script>
    <script type='text/javascript'>
    var name = '<%= escape_jsvar @name %>';
    var title = '<%= escape_jsvar @title %>';
    var root =  '<%= app_root %>';
    var orig_md5 = '<%= @orig_md5 %>';
    var write_authorized = <%= @write_authorized %>;
    </script>
  </head>
  <body>
    <div class='title'>
      <span class='wordtitle'>
        <a href="<%= app_root %>/<%= @name %>/<%= @title %>">
          <%= sanitize(@title) %>
        </a>
      </span>
      <form action="<%= app_root %>/__search/<%= @name %>" method="get" style="float:right;font-size:12pt;">
        <input height='20' name='q' type='text' value='<%= @q %>'>
        <input type='submit' value='検索'>
      </form>
    </div>
    <p>
    <textarea id='contents' rows='40' cols='100'><%= sanitize(@text) %></textarea>
    <script type='text/javascript'>
    var textarea = document.getElementById('contents');
    data = textarea.value;
    datamd5 = MD5_hexhash(utf16to8(data));
    </script>
  </body>
</html>
